@model IEnumerable<Bus_Shuttle.Models.BusModels.BusViewModel>
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center mt-5 mb-4">Manager Dashboard</h2>
            <h4 class="text-center mb-3">Logged in as: <span class="text-primary">@User.Identity.Name</span></h4>
            <div class="btn-group mb-3">
                <a class="btn btn-primary" asp-action="BusView">Buses</a>
                <a class="btn btn-primary" asp-action="EntryView">Entries</a>
                <a class="btn btn-primary" asp-action="LoopView">Loops</a>
                <a class="btn btn-primary" asp-action="RouteView">Routes</a>
                <a class="btn btn-primary" asp-action="StopView">Stops</a>
                <a class="btn btn-primary" asp-action="ViewDrivers">Drivers</a>
                <a class="btn btn-primary" asp-action="AuthDrivers">Authorize Drivers</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <a class="btn btn-success mr-2" asp-action="LoginView">Login</a>
            <a class="btn btn-success mr-2" asp-action="SignUpView">Register</a>
            <form method="post" asp-action="Logout" class="d-inline">
                <button type="submit" class="btn btn-danger">Logout</button>
                @Html.AntiForgeryToken() 
            </form>
        </div>
    </div>
</div>

<style>
    h4.text-center {
        font-size: 24px;
    }
</style>