@model List<DomainModel.DomainModel.User>

<h2>Drivers</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Password</th>
            <th>Edit</th>
            <th>Delete</th> 
        </tr>
        </thead>
        <tbody>
        @foreach (var driver in Model)
        {
            <tr>
                <td>@driver.Id</td>
                <td>@driver.FirstName</td>
                <td>@driver.LastName</td>
                <td>@driver.UserName</td>
                <td>@driver.Password</td>
                <td>
                    <!-- Added Edit link -->
                    <a asp-action="DriverEdit" asp-route-id="@driver.Id">Edit</a>
                </td>
                <td>
                    <form asp-action="DeleteDriver" asp-route-id="@driver.Id" method="post" onsubmit="return confirm('This action is PERMANENT are you sure you want to delete this user?');">
                                                <button type="submit" class="btn btn-danger">Delete</button></form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No drivers found.</p>
}